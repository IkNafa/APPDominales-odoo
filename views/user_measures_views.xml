<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="user_measures_view_tree" model="ir.ui.view">
            <field name="name">user.measures.view.tree</field>
            <field name="model">user.measures</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="date"/>
                    <field name="weight"/>
                </tree>
            </field>
        </record>

        <record id="user_measures_view_form" model="ir.ui.view">
            <field name="name">user.measures.view.form</field>
            <field name="model">user.measures</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="date"/>
                                <field name="weight"/>
                            </group>
                            <group>
                                <field name="height"/>
                            </group>
                        </group>
                        <group>
                            <group string="Impedancia">
                                <field name="porGrasa"/>
                                <field name="masaMuscular"/>
                            </group>
                            <group string="Contornos">
                                <field name="contornoBrazo"/>
                                <field name="contornoCintura"/>
                                <field name="contornoMuslo"/>
                                <field name="contornoCuello"/>
                                <field name="contornoPecho"/>
                                <field name="contornoGemelo"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    
    </data>
    

</odoo>
