<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="usuario_usuario_view_tree" model="ir.ui.view">
            <field name="name">usuario.usuario.view.tree</field>
            <field name="model">usuario.usuario</field>
            <field name="arch" type="xml">
                <tree create="false" edit="false">
                    <field name="login"/>
                    <field name="genero"/>
                    <field name="fecha_nac"/>
                    <field name="email"/>
                </tree>
            </field>
        </record>

        
        <record id="usuario_usuario_view_form" model="ir.ui.view">
            <field name="name">usuario.usuario.view.form</field>
            <field name="model">usuario.usuario</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <div class="oe_button_box" name="button_box" attrs="{'invisible':[('id','=',False)]}">
                            <button name="open_medidas_usuario" type="object" class="oe_stat_button" icon="fa-tachometer">
                                <field name="medidas_count" widget="statinfo"/>
                            </button>
                            <button name="open_rutinas_usuario" type="object" class="oe_stat_button" icon="fa-folder-open-o">
                                <field name="rutinas_count" widget="statinfo"/>
                            </button>
                        </div>
                        <field name="image" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;: &quot;image_medium&quot;, &quot;size&quot;: [90, 90]}"/>
                        <div class="oe_title">
                            <h2>
                                <field name="name" default_focus="1" placeholder="Nombre" style="margin-right:5px"/>
                                <field name="apellidos" placeholder="Apellidos"/>
                            </h2>
                            <div>
                                <label for="login" string="Nombre de usuario"/><br/>
                                <field name="login"/>
                            </div>
                        </div>

                        <group>
                            <group name="basic" string="Información Personal">
                                <field name="fecha_nac"/>
                                <field name="genero"/>
                                <field name="phone"/>
                                <field name="email"/>
                            </group>
                        </group>
                        <group string="Biografía">
                            <div><field name="bio"/></div>
                        </group>

                        <notebook>
                            <page name="trainers" string="Entrenadores">
                                <field name="entrenador_ids">
                                    <tree create="false" edit="false">
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="odoo" string="Odoo">
                                <group>
                                    <field name="odoo_usuario_id" readonly="1" required="0"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="usuario_usuario_action" model="ir.actions.act_window">
            <field name="name">Usuarios</field>
            <field name="res_model">usuario.usuario</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <menuitem
            id="usuario_usuario_menu"
            name="Usuarios"
            action="usuario_usuario_action"
            parent="appdominales_root_menu"
            sequence="1"/>


        <record id="usuario_cliente_view_tree" model="ir.ui.view">
            <field name="name">usuario.cliente.view.tree</field>
            <field name="model">usuario.cliente</field>
            <field name="inherit_id" ref="usuario_usuario_view_tree"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="create">true</attribute>
                </xpath>
                <xpath expr="//field[@name='email']" position="after">
                    <field name="profesion"/>
                </xpath>
            </field>
        </record>

        <record id="usuario_cliente_view_form" model="ir.ui.view">
            <field name="name">usuario.cliente.view.form</field>
            <field name="model">usuario.cliente</field>
            <field name="inherit_id" ref="usuario_usuario_view_form"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='basic']" position="after">
                    <group string="Cliente">
                        <field name="profesion"/>
                    </group>
                </xpath>
            </field>
        </record>


        <record id="usuario_cliente_action" model="ir.actions.act_window">
            <field name="name">Clientes</field>
            <field name="res_model">usuario.cliente</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>


        <menuitem
            id="usuario_cliente_menu"
            name="Clientes"
            action="usuario_cliente_action"
            parent="usuario_usuario_menu"
            sequence="1"/>


        <record id="usuario_entrenador_view_tree" model="ir.ui.view">
            <field name="name">usuario.entrenador.view.tree</field>
            <field name="model">usuario.entrenador</field>
            <field name="inherit_id" ref="usuario_usuario_view_tree"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="create">true</attribute>
                </xpath>
                <xpath expr="//field[@name='email']" position="after">
                    <field name="especialidad"/>
                </xpath>
            </field>
        </record>

        <record id="usuario_entrenador_view_form" model="ir.ui.view">
            <field name="name">usuario.entrenador.view.form</field>
            <field name="model">usuario.entrenador</field>
            <field name="inherit_id" ref="usuario_usuario_view_form"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='basic']" position="after">
                    <group string="Entrenador">
                        <field name="especialidad"/>
                    </group>
                </xpath>
                <xpath expr="//page[@name='odoo']" position="before">
                    <page name="clientes" string="Clientes">
                        <field name="cliente_ids">
                            <tree create="false">
                                <field name="login"/>
                                <field name="name"/>
                                <field name="apellidos"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="usuario_entrenador_action" model="ir.actions.act_window">
            <field name="name">Entrenadores</field>
            <field name="res_model">usuario.entrenador</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <menuitem
            id="usuario_entrenador_menu"
            name="Entrenadores"
            action="usuario_entrenador_action"
            parent="usuario_usuario_menu"
            sequence="2"/>

        <record id="usuario_medidas_view_tree" model="ir.ui.view">
            <field name="name">usuario.medidas.view.tree</field>
            <field name="model">usuario.medidas</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="fecha"/>
                    <field name="peso"/>
                    <field name="altura"/>
                </tree>
            </field>
        </record>

        <record id="usuario_medidas_view_form" model="ir.ui.view">
            <field name="name">usuario.medidas.view.form</field>
            <field name="model">usuario.medidas</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group string="Básico">
                            <group>
                                <field name="fecha"/>
                            </group>
                            <group>
                                <field name="altura"/>
                                <field name="peso"/>
                            </group>
                        </group>
                        <group>
                            <group string="In-Body">
                                <field name="porGrasa"/>
                                <field name="masaMuscular"/>
                            </group>
                            <group string="Pliometría">
                                <field name="contorno_brazo" />
                                <field name="contorno_cintura" />
                                <field name="contorno_muslo" />
                                <field name="contorno_cuello" />
                                <field name="contorno_pecho" />
                                <field name="contorno_gemelo" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="usuario_medidas_view_graph" model="ir.ui.view">
            <field name="name">usuario.medidas.view.graph</field>
            <field name="model">usuario.medidas</field>
            <field name="arch" type="xml">
                <graph string="Medidas">
                    <field name="fecha" interval="month" type="col"/>
                    <field name="peso" type="row"/>
                    
                </graph>
            </field>
        </record>
    </data>
    

</odoo>
