        <record id="rutina_rutina_view_tree" model="ir.ui.view">
            <field name="name">rutina.rutina.view.tree</field>
            <field name="model">rutina.rutina</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="client_user_id"/>
                </tree>
            </field>
        </record>

        <record id="rutina_rutina_view_form" model="ir.ui.view">
            <field name="name">rutina.rutina.view.form</field>
            <field name="model">rutina.rutina</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nombre (p.e Rutina Pecho-Biceps)"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="fecha_inicio" attrs="{'required':[('fecha_fin','!=',False)]}"/>
                                <field name="fecha_fin"/>
                                <field name="rutina_ids" nolabel="1" style="display: inline;" widget="many2many_checkboxes"/>
                            </group>
                            <group>
                                <field name="client_user_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="ejercicios" string="Ejercicios">
                                <field name="rutina_ejercicio_ids">
                                    <tree>
                                        <field name="display_name" string="Nombre"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="rutina_ejercicio_view_form" model="ir.ui.view">
            <field name="name">rutina.ejercicio.view.form</field>
            <field name="model">rutina.ejercicio</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="ejercicio_id"/>
                            </group>
                            <group>
                                <field name="variante_id" options="{'limit': 0}"/>
                            </group>
                        </group>
                        <div>
                            <label for="set_ids" string="Sets"/>
                            <field name="set_ids">
                                <tree editable="bottom">
                                    <field name="orden" widget="handle"/>
                                    <field name="reps"/>
                                    <field name="peso"/>
                                    <field name="rpe"/>
                                </tree>
                            </field>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

    </data>

</odoo>
